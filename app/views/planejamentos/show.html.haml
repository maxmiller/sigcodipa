.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), planejamentos_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_planejamento_path(@planejamento), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), planejamento_path(@planejamento), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
