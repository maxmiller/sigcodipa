  %strong= model_class.human_attribute_name(:empresa) + ':'
  %br
  = @planejamento.empresa
%p
  %strong= model_class.human_attribute_name(:tipo_empresa) + ':'
  %br
  = @planejamento.tipo_empresa
%p
  %strong= model_class.human_attribute_name(:local_evento) + ':'
