- model_class = Orcamento
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:nome) + ':'
  %br
  = @orcamento.nome
%p
  %strong= model_class.human_attribute_name(:valor) + ':'
  %br
  = @orcamento.valor
%p
  %strong= model_class.human_attribute_name(:tipo_id) + ':'
  %br
  = @orcamento.tipo_id
%p
  %strong= model_class.human_attribute_name(:ano) + ':'
  %br
  = @orcamento.ano

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), orcamentos_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_orcamento_path(@orcamento), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), orcamento_path(@orcamento), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
