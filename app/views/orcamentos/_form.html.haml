= form_for @orcamento, :html => { :class => "form-horizontal" } do |f|
  -if @orcamento.errors.any?
    .alert.alert-danger.alert-dismissable
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
      %h4= "#{pluralize(@orcamento.errors.count, "error")} prohibited this orcamento from being saved:"

      %ul
        - @orcamento.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :nome, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :nome, :class => 'form-control'
  .form-group
    = f.label :valor, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :valor, :class => 'form-control'
  .form-group
    = f.label :slug, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :slug, :class => 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit :class => 'btn btn-primary'
