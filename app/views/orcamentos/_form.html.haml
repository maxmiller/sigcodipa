= form_for @orcamento, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :nome, :class => 'control-label'
    .controls
      = f.text_field :nome, :class => 'text_field'
  .control-group
    = f.label :valor, :class => 'control-label'
    .controls
      = f.text_field :valor, :class => 'text_field'
  .control-group
    = f.label :tipo_id, :class => 'control-label'
    .controls
      = f.select :tipo_id, Tipo.all.map {|q| [q.nome,q.id] } , :class => 'dropdown-menu pull-right'
  .control-group
    = f.label :ano, :class => 'control-label'
    .controls
      = f.text_field :ano, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), orcamentos_path, :class => 'btn'
