- model_class = Tipo
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:nome) + ':'
  %br
  = @tipo.nome

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), tipos_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_tipo_path(@tipo), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), tipo_path(@tipo), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
